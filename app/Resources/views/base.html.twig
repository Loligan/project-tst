<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    {% block head %} {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="{{ asset('semantic-ui/semantic.min.js') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('semantic-ui/semantic.min.css') }}">
</head>
<body>
<nav class="ui mini menu">
    <a class="active item" href="/">
        Home
    </a>
    <a class="item" href="{{ path('category_index') }}">
        Category
    </a>
    <a class="item" href="{{ path('item_index') }}">
        Items
    </a>
    <a class="item" href="{{ path('img_index') }}">
        Images
    </a>
    <a class="item" href="{{ path('param_index') }}">
        Params
    </a>
    <div class="right menu">
        {% if app.user %}
        <div class="item">
            <button class="ui basic button">
                <i class="icon user"></i>
                <a href={{ logout_path('main') }}>Logout</a>
            </button>
        </div>
        {% else %}
            <div class="item">
                <button class="ui basic button">
                    <i class="icon user"></i>
                    <a href={{ path('login') }}>Login</a>
                </button>
            </div>
            <div class="item">
                <button class="ui basic button">
                    <i class="icon user"></i>
                    <a href={{ relative_path('/register')}}>Register</a>
                </button>
            </div>
        {% endif %}
    </div>
</nav>
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
