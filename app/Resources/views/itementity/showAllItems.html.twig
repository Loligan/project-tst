{% extends 'base.html.twig' %}

{% block body %}
    <div class="container"></div>


    <div class="ui internally celled grid">
        <div class="row">
            <div class="three wide column">
                <div class="ui small vertical menu">

                    <div class="item">
                        <div class="header">Products</div>
                        <div class="menu">
                            <a class="item">Enterprise</a>
                            <a class="item">Consumer</a>
                        </div>
                    </div>
                    <div class="item">
                        <div class="header">CMS Solutions</div>
                        <div class="menu">
                            <a class="item">Rails</a>
                            <a class="item">Python</a>
                            <a class="item">PHP</a>
                        </div>
                    </div>
                    <div class="item">
                        <div class="header">Hosting</div>
                        <div class="menu">
                            <a class="item">Shared</a>
                            <a class="item">Dedicated</a>
                        </div>
                    </div>
                    <div class="item">
                        <div class="header">Support</div>
                        <div class="menu">
                            <a class="item">E-mail Support</a>
                            <a class="item">FAQs</a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="nine wide column">
                <div class="ui celled relaxed list large">
                {% for itemEntity in itemEntities %}
                        <div class="item">
                            {#<img class="ui avatar image" src="/images/avatar/small/daniel.jpg">#}
                            <i class="image big icon"></i>
                            <div class="content">
                                <a class="header">{{ itemEntity.name }}</a>
                                <div class="description">Price: <b>{{ itemEntity.price }}</b> BYN</div>
                                <div class="description">Params: <b>{{ itemEntity.params }}</b> </div>
                            </div>
                        </div>
                {% endfor %}
                </div>
            </div>

        </div>

    </div>

{% endblock %}

