{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parameterentity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parameterEntity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ parameterEntity.name }}</td>
            </tr>
            <tr>
                <th>Typevalue</th>
                <td>{{ parameterEntity.typeValue }}</td>
            </tr>
            <tr>
                <th>Ismain</th>
                <td>{% if parameterEntity.isMain %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('param_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('param_edit', { 'id': parameterEntity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
